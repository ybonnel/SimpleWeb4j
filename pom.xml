        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-core</artifactId>
        </dependency>

        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
        </dependency>

		<dependency>
			<groupId>com.github.sommeri</groupId>
			<artifactId>less4j</artifactId>
		</dependency>

		<!-- webjars -->
